generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  engineType = "binary"

}

datasource db {
  provider = "postgresql"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Synopsis {
  id          Int      @id @default(autoincrement())
  title       String
  studentName String
  description String?
  stream      String   // e.g., Marketing, Finance, Operations, etc.
  year        Int      // Batch year or submission year
  researchArea String?  // e.g., Digital Marketing, Consumer Behavior, etc.
  status      String   @default("submitted") // draft, submitted, approved, published
  advisor     String?  // Faculty advisor name
  filePath    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
